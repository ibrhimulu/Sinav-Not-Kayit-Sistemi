@model List<UserModel>
@{
    ViewData["Title"] = "Kullanıcılar";
}


<div class="rov">
    <div class="col">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <hr />
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <a asp-action="Create" class="btn btn-primary btn-sm"><i class="fa fa-plus me-2"></i>Yeni Kullanıcı</a>
    </div>
</div>

<div class="row mb-3">
    <div class="col">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th>Ad Soyad</th>
                    <th>Kullanıcı Adı</th>
                    <th>Locked</th>
                    <th>Rol</th>
                    <th>Oluşturma Tarihi</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserModel user in Model)
                {
                    <tr>
                        <td>@user.NameSurname</td>
                        <td>@user.Username</td>
                        <td>@if (user.Locked)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                            </td>
                        <td>@if (user.RolId==1)
                            {
                              <p>Öğrenci</p>   
                            }
                            else if (user.RolId == 2)
                            {
                                <p>Admin</p>
                            }
                            else
                            {
                                <P>Profesör</P>
                            }
                            </td>
                        <td>@user.CreatedAt</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-info btn-sm text-white"><i class="fa fa-edit me-2"></i>Düzenle</a>
                            

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>