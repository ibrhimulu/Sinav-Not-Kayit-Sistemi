@model List<NotModel>
@{
    ViewData["Title"] = "Sınav Sonuçlarım";
}


<div class="rov">
    <div class="col">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <hr />
    </div>
</div>



<div class="row mb-3">
    <div class="col">
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    
                    <th>Ders Adı</th>
                    <th>Sınav 1</th>
                    <th>Sınav 2</th>
                    <th>Sınav 3</th>
                    <th>Ortalama</th>
                    <th>Durum</th>


                   
                </tr>
            </thead>
            <tbody>
                @foreach (NotModel not in Model)
                {
                    <tr>
                        
                        <td>@not.DersAd</td>
                        <td>@not.Sınav1</td>
                        <td>@not.Sınav2</td>
                        <td>@not.Sınav3</td>
                        <td>@not.Ortalama</td>
                        <td>
                            @if (not.Durum)
                            {
                                <i class="fa fa-check text-success"></i>
                            }
                            else
                            {
                                <i class="fa fa-times text-danger"></i>
                            }
                        </td>

                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>